<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--class path: 本地MySQL JDBC驱动的绝对路径-->
    <classPathEntry location="F:/Maven/repository/mysql/mysql-connector-java/6.0.6/mysql-connector-java-6.0.6.jar" />
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass = "com.mysql.jdbc.Driver"
                        connectionURL = "jdbc:mysql://120.77.212.58:3306/corpmap?characterEncoding=utf8"
                        userId = "root"
                        password = "root">
            <!--忽略MySQL自带表-->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--targetProject: 项目的本地路径-->
        <javaModelGenerator targetPackage="edu.scu.corpmap.entity.mysql" targetProject="F:/ChinaSoftwareCup/code/corpmap/src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"  targetProject="F:/ChinaSoftwareCup/code/corpmap/src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="edu.scu.corpmap.dao"  targetProject="F:/ChinaSoftwareCup/code/corpmap/src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--建立数据库中的表与类的映射关系-->
        <table tableName="hot_corp" domainObjectName="HotCorp"/>

    </context>
</generatorConfiguration>